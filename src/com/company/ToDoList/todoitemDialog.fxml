<?xml version="1.0" encoding="UTF-8"?>

<?import.javafx.scene.control.DialogPane?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<DialogPane fx:controller="com.company.ToDoList.DialogController"
            xmlns:fx="http://javafx.com/fxml" >
<headerText>Add your todo items over here </headerText>
    <content>
        <GridPane hgap="10" vgap="10">
            <Label text="Short Description" GridPane.rowIndex="0" GridPane.columnIndex="0"></Label>
            <TextField fx:id="shortDescriptionField" GridPane.rowIndex="0" GridPane.columnIndex="1"></TextField>
            <Label text="Details" GridPane.rowIndex="1" GridPane.columnIndex="0"></Label>
            <TextArea fx:id="detailArea" GridPane.rowIndex="1" GridPane.columnIndex="1" wrapText="true"></TextArea>
            <Label text="Deadline" GridPane.rowIndex="2" GridPane.columnIndex="0"></Label>
            <DatePicker fx:id="deadlineDate" GridPane.rowIndex="2" GridPane.columnIndex="1"></DatePicker>
        </GridPane>
    </content>

</DialogPane>